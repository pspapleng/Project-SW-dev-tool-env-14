{
  "name": "moodment",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cypress/instrument-cra": "^1.4.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.yarn run 4.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "axios": "^0.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "http-server": "^14.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "sass": "^1.49.7",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",

    "jest:unit:run": "jest -i ./src/tests/unit.test.js",
    "jest:unit:cov": "jest --coverage ./src/tests/unit.test.js ./src/app.test.js",

    "record":"cross-env BROWSER=none react-scripts -r @cypress/instrument-cra start -- \"cypress open\"",

    "start-serve": "start-test record http://localhost:3000",

    "cy:run:e2e": "cypress run -s ./cypress/integration/e2e.spec.js",
    "test:e2e:run": "npm run start-serve cy:run:e2e",

    "cy:run:component": "cypress run -s ./cypress/integration/component.spec.js",
    "test:component:run": "npm run start-serve cy:run:component & npx nyc report --reporter=text",

    "cy:run:integration": "cypress run -s ./cypress/integration/integration.spec.js",
    "test:integration:run": "npm run start-serve cy:run:integration & npx nyc report --reporter=text"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.12",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.1",
    "cypress-istanbul": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "start-server-and-test": "^1.14.0"
  }
}