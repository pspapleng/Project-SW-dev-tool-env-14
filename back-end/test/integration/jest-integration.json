{
    "moduleFileExtensions": ["js", "json", "ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "rootDir": "../../",
    "testEnvironment": "node",
    "testRegex": ".integration-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }